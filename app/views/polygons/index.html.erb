<h1>Listing polygons</h1>

<table>
  <tr>
    <th>Geometry</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @polygons.each do |polygon| %>
  <tr>
    <td><%= polygon.geometry %></td>
    <td><%= link_to 'Show', polygon %></td>
    <td><%= link_to 'Edit', edit_polygon_path(polygon) %></td>
    <td><%= link_to 'Destroy', polygon, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

